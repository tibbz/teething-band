<header role="banner" class="main-header"  data-section-id="{{ section.id }}" data-section-type="header-section">
  <div class="page-width">
    <div class="main-header__holder">
      <div class="main-header__menu-minilogo">
        <button type="button" class="navbar-toggle collapsed">
      <span>
        {{- 'general.accessibility.menu' | t -}}
      </span>
        </button>
        <a class=" mini-logo small--hide medium--hide" href="/">
          <img src="{{ 'teethlogo.png' | asset_url }}"
               alt="{{ shop.name }}"
               itemprop="logo">
        </a>
      </div>
      <div class="main-header__logo-menu">
        <a class="site-logo small--hide medium--hide" href="/">
          <img src="{{ 'teethlogo.png' | asset_url }}"
               alt="{{ shop.name }}"
               itemprop="logo">
        </a>
        <nav role="navigation" class="site-nav--holder small--hide">
          <ul class="site-nav medium-down--hide">
            {%- include 'navigation-list' with section.settings.main_linklist -%}
          </ul>
        </nav>
      </div>
      <div class="main-header__search-card--container">
        <div class="main-header__search-card">
          {%- if shop.customer_accounts_enabled -%}
            <a href="/account" class="medium-down--hide" title="{{ 'layout.customer.account' | t }}">
            {%- include 'icon-account' -%}
            <span class="label--hidden">{{ 'layout.customer.account' | t }}</span></a>
          {%- endif -%}
          <a  href="/search" class="btn--search medium-down--hide" title="{{ 'layout.search.title' | t }}">
            {%- include 'icon-search' -%}
            <span class="icon-fallback-text">{{ 'general.search.submit' | t }}</span>
          </a>
          <a href="/cart" class="topNav__cart open-cart" title="{{ 'layout.cart.title' | t }}">
            <span class="label-hidden">{{ 'layout.cart.title' | t }}</span>
            {%- include 'icon-bag' -%}
            <span class="cart-counter" data-cart-render="item_count">
              {{- cart.item_count -}}
            </span>
          </a>
        </div>
      </div>
    </div>
  </div>
  {%- include 'megamenu' -%}
</header>

