.arrow-right {
  content: '';
  box-sizing: content-box;
  display: inline-block;
  width: 30px;
  height: 45px;
  margin-right: -30px;
  @include media-query($medium) {
    margin-right: -25px;
  }
  @include media-query($widescreen) {
    margin-right: 0;
  }
  background: {
    image: url($svg-arrow-right);
    repeat: no-repeat;
    position: center;
    color: transparent;
  }
}
